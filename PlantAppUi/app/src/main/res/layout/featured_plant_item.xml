<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="210dp"
    android:layout_marginTop="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="90dp"
    android:clickable="true"
    android:focusable="true"
    android:elevation="20dp"
    android:background="@drawable/featured_bg">

    <ImageView
        android:id="@+id/featured_item_plant_picture"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/featured_item_plant_picture"
        android:background="@color/white">


        <TextView
            android:id="@+id/featured_item_plant_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:maxLines="1"
            android:layout_toStartOf="@+id/featured_item_plant_price"
            android:singleLine="true"
            android:text="Title"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="8dp"
            android:layout_toLeftOf="@+id/featured_item_plant_price" />

        <TextView
            android:id="@+id/featured_item_plant_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="8dp"
            android:text="$500"
            android:textColor="@color/cadet_blue"
            tools:ignore="RtlCompat" />


        <TextView
            android:id="@+id/featured_item_plant_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="country"
            android:layout_marginStart="8dp"
            android:layout_below="@id/featured_item_plant_title"
            tools:ignore="RtlCompat" />

    </RelativeLayout>

</RelativeLayout>